<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iploop.test">
    
    <uses-sdk android:minSdkVersion="21" android:targetSdkVersion="34" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <application
        android:label="IPLoop Enterprise"
        android:debuggable="false"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        
        <activity
            android:name=".ProductionActivity"
            android:exported="true"
            android:label="IPLoop Enterprise"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".EnhancedTestActivity"
            android:exported="true"
            android:label="Enhanced Tests">
        </activity>
        
        <activity
            android:name=".RealWorldTestActivity"
            android:exported="true"
            android:label="Real-World Tests">
        </activity>
        
    </application>
</manifest>
